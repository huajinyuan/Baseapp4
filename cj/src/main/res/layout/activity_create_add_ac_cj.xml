<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_account_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_white">
        <include layout="@layout/layout_topbar_cj" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_appRed"
                        android:text="*"
                        android:textSize="15sp"
                        android:paddingTop="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动名称"
                        android:textColor="@color/color_black"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:layout_weight="1"
                            android:hint="请填写"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="11dp"
                            android:textSize="14sp"
                            android:text=""
                            android:maxLength="50"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:src="@mipmap/icon_arrow_grey_right_pt"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_appRed"
                        android:text="*"
                        android:textSize="15sp"
                        android:paddingTop="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间"
                        android:textColor="@color/color_black"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_beginTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:layout_weight="1"
                            android:hint="请填写"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="11dp"
                            android:textSize="14sp"
                            android:focusable="false"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:src="@mipmap/icon_arrow_grey_right_pt"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_appRed"
                        android:text="*"
                        android:textSize="15sp"
                        android:paddingTop="3dp"/>`
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间"
                        android:textColor="@color/color_black"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_endTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:layout_weight="1"
                            android:hint="请填写"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="11dp"
                            android:textSize="14sp"
                            android:focusable="false"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:src="@mipmap/icon_arrow_grey_right_pt"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_appRed"
                        android:text="*"
                        android:textSize="15sp"
                        android:paddingTop="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="抽奖次数"
                        android:textColor="@color/color_black"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_cjNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:layout_weight="1"
                            android:hint="请填写"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="11dp"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:maxLength="6"
                            android:text="1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:src="@mipmap/icon_arrow_grey_right_pt"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_appRed"
                        android:text="*"
                        android:textSize="15sp"
                        android:paddingTop="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享获取抽奖"
                        android:textColor="@color/color_black"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_shareGetNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:layout_weight="1"
                            android:hint="请填写"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="11dp"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:maxLength="6"
                            android:text="1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:src="@mipmap/icon_arrow_grey_right_pt"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_appRed"
                        android:text="*"
                        android:textSize="15sp"
                        android:paddingTop="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动说明"
                        android:textColor="@color/color_black"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="22dp"
                    android:paddingRight="11dp">
                    <EditText
                        android:id="@+id/et_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_weight="1"
                        android:hint="请填写"
                        android:background="@null"
                        android:gravity="top"
                        android:layout_marginRight="11dp"
                        android:paddingBottom="10dp"
                        android:textSize="14sp"
                        android:maxLength="50"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:src="@mipmap/icon_arrow_grey_right_pt"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    android:text="活动图片"
                    android:textColor="@color/color_black"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_ac"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="22dp"
                    android:src="@mipmap/icon_img_add_cj"/>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/bt_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="22dp"
            android:text="保存"
            android:background="@drawable/shape_radius5_appblue"
            android:textColor="@color/white"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_cuticon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:visibility="invisible">
        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_appBlue">
            <ImageView
                android:id="@+id/iv_cut_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="21dp"
                android:src="@mipmap/icon_back" />
            <TextView
                android:id="@+id/tv_cut_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/color_white"
                android:text="裁剪"/>
            <TextView
                android:id="@+id/tv_cut_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="50dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:text="确定"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
        <com.example.choujiang.rxpicture.widget.cropview.CropImageView
            android:id="@+id/cropView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_top"/>
    </RelativeLayout>
</RelativeLayout>
