<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_backGrey"
    android:orientation="vertical"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="11dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/shape_radius5_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <CheckBox
                android:id="@+id/cb_check"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/selector_cb"
                android:button="@null"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/09/22 11:11"
                android:textColor="@color/color_text_grey"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1000000008797867"
                android:textColor="@color/color_text_grey"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_radius3_blue"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="待成团"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:layout_marginLeft="8dp"
                    android:text="5人团价值999元保5人团价值999元保修9"
                    android:textColor="@color/color_black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_grey"
                android:textSize="@dimen/sp_12"
                android:text="抽奖：" />
            <TextView
                android:id="@+id/tv_cjPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小A"
                android:textColor="@color/color_text_grey"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/tv_getType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_grey"
                android:textSize="12sp"
                android:gravity="right"
                android:text="系统赠与"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="员工："
                android:textColor="@color/color_text_grey"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/tv_staff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/color_text_grey"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/tv_jiangpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAppRed"
                android:textSize="12sp"
                android:gravity="right"
                android:text="奖品："/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>