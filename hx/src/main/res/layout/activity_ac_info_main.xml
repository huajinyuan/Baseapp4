<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_backGrey">

    <include layout="@layout/layout_topbar_cj" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="11dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_190">
                <ImageView
                    android:id="@+id/iv_ac"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_appBlue">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:text="5块钱博"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:background="@drawable/shape_border3_white"
                        android:padding="2dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_toRightOf="@+id/tv_price"
                        android:text="￥4980元铠甲镀晶"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/dp_5"
                        android:text="720人参与"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/shape_radius_blue_line_w"
                android:orientation="vertical"
                android:padding="11dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_radius5_blue"
                        android:paddingBottom="@dimen/dp_3"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_3"
                        android:text="中奖纪录"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_radius_blue_line_w"
                        android:paddingBottom="@dimen/dp_3"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_3"
                        android:text="我的奖品"
                        android:textColor="@color/color_appBlue"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_winHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/shape_radius_blue_line_w"
                android:orientation="vertical"
                android:padding="11dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20">
                <TextView
                    android:id="@+id/tv_stop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:text="停用"
                    android:gravity="center"
                    android:background="@drawable/shape_radius5_blue"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_abandon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="作废"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@drawable/shape_radius5_red"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
