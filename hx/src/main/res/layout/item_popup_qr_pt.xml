<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_transBlue">

    <ImageView
        android:id="@+id/iv_staff_qr_pt"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/iv_staff_qr_pt"
        android:text=""
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_staff_qr_pt"
        android:text="发送二维码给好友，发展更多资源"
        android:layout_marginTop="16dp"
        android:textColor="@color/color_white"/>
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_staff_qr_pt"
        android:layout_marginTop="70dp"
        android:src="@mipmap/icon_circle_close_pt"/>
    <TextView
        android:id="@+id/tv_saveQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="保存到相册"
        android:textColor="@color/color_blue"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_radius5_white"/>
</RelativeLayout>

