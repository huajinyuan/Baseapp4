<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_shoppingcar_top"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/color_appBlue">

    <ImageView
        android:id="@+id/iv_topbar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="21dp"
        android:src="@mipmap/icon_back" />
    <TextView
        android:id="@+id/tv_topbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="@color/color_white"
        android:text=""/>
    <TextView
        android:id="@+id/tv_topbar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:text=""
        android:layout_marginRight="10dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_topbar_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:src="@mipmap/icon_top_right_hx"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/iv_topbar_right_detail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:layout_marginRight="35dp"
        android:src="@mipmap/icon_ticheng_detail"
        android:visibility="gone"/>
</RelativeLayout>