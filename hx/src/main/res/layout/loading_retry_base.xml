<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ivRetryError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvRetryError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivRetryError"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48px"
            android:gravity="center"
            android:maxWidth="800px"
            android:text="网络没连上哦"
            android:textColor="@color/black"
            android:textSize="42px"/>

        <TextView
            android:id="@+id/tvRetryButton"
            android:layout_width="393px"
            android:layout_height="105px"
            android:layout_below="@id/tvRetryError"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="102px"
            android:background="@drawable/btn_reload"
            android:gravity="center"
            android:text="刷新页面"
            android:textColor="@drawable/btn_reload_text"
            android:textSize="@dimen/TextSize_40"/>
    </RelativeLayout>
</RelativeLayout>
